{
    "name": "aya-prover-vscode",
    "displayName": "Aya Prover",
    "description": "Aya Prover support for VSCode",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.55.0"
    },
    "categories": [
        "Snippets",
        "Programming Languages"
    ],
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:aya"
    ],
    "contributes": {
        "commands": [
            {
                "command": "aya.lsp.command.restart",
                "category": "Aya",
                "title": "Restart Aya Language Server"
            }
        ],
        "configuration": {
            "title": "Aya",
            "properties": {
                "aya.lsp.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "[Recommended] Use Language Server to provide syntax highlighting and other interactive features"
                },
                "arend.lsp.host": {
                    "type": "string",
                    "default": "localhost",
                    "description": "The host which the language server listens on."
                },
                "arend.lsp.port": {
                    "type": "number",
                    "default": 11451,
                    "description": "The port number which the language server listens on."
                },
                "arend.lsp.path": {
                    "type": "string",
                    "description": "Specifies the local path of the aya language server jar, mostly used for debugging"
                }
            }
        },
        "languages": [
            {
                "id": "aya",
                "aliases": [
                    "Aya",
                    "aya",
                    "Aya Prover",
                    "aya prover"
                ],
                "extensions": [
                    ".aya"
                ],
                "configuration": "./language-configuration.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.55.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.19.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0"
    }
}